<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/app_light_primary_color" />
            <gradient android:angle="-90" android:startColor="@color/app_dark_primary_color" android:endColor="@color/app_primary_color"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/app_light_primary_color" />
            <solid android:color="@color/app_primary_color"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/app_light_primary_color" />
            <gradient android:angle="-90" android:startColor="@color/app_primary_color" android:endColor="@color/app_dark_primary_color" />
        </shape>
    </item>
</selector>

