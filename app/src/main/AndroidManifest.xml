<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.smartBilling.com" >
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".SmartBillingApplication"
        android:theme="@style/appTheme">
        <activity
            android:name=".view.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.ScanningActivity"
            android:label="@string/app_name">
        </activity>
        <activity android:label="Registration" android:name=".view.RegistrationActivity"
            android:logo="@android:color/transparent">

        </activity>
        <activity android:label="Smart Billing" android:name=".view.ProductListActivity"
            android:logo="@android:color/transparent">

        </activity>
        <activity android:label="Smart Billing" android:name=".view.ProductDetailsActivity"
            android:logo="@android:color/transparent">

        </activity>

        <activity android:name=".view.ProductBillingActivity" android:label="Billing"
            android:logo="@android:color/transparent">

        </activity>


    </application>

</manifest>
